<html>

<head>
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="./assets/theme/css/panel.css" rel='stylesheet'>
    <meta http-equiv="refresh" content="2; games.ejs">
    <script src="./assets/js/index.js"></script>
    </head>

<body>
    <div class="div-lateral">
        <div class="lateral-item-first" onclick="redirect('home.ejs')">

            <p class="lateral-text "><i class="fa-solid fa-user"></i> Home</p>

        </div>
        <div class="lateral-item" onclick="redirect('games.ejs')">

            <p class="lateral-text"><i class="fa-solid fa-gamepad"></i>Games</p>

        </div>
        <div class="lateral-item" onclick="redirect('cheats.ejs')">

            <p class="lateral-text"><i class="fa-solid fa-ghost"></i> Cheats</p>

        </div>
        <div class="lateral-item" onclick="redirect('settings.ejs')">

            <p class="lateral-text"><i class="fa-solid fa-gear"></i> Settings</p>

        </div>
        <div class="lateral-item" onclick="redirect('indra://exit')">

            <p class="lateral-text"><i class="fa-solid fa-right-from-bracket"></i> Sair</p>

        </div>

    </div>
    <div class="div-body">
        <% for (var i=0; i<games.length; i++) { %>
        <div class="div-item">
            <img class="item-image" src="<%= games[i].gameImage %>"></img>
            <p><%= games[i].gameName %></p>
            <% if(installedGames.includes(games[i].gameName)) {%>
             <button onclick="window.location.href = 'indra://open<%= games[i].gameName%>'" class="custom-btn btn-3"><span>Iniciar</span></button>
             <%} else {%>
                <button onclick="window.location.href = 'indra://install<%= games[i].gameName%>'" class="custom-btn btn-3"><span>Instalar</span></button>
             
            <%}%>
        </div>
        <% } %>
    </div>
</body>


</html>